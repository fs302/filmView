<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <package name="default" extends="struts-default" namespace="/">
        <default-action-ref name="home" />
        <action name="home">
            <result>/index.jsp</result>
        </action>
        <action name="gettingStarted">
            <result>/WEB-INF/pages/first_action_input.jsp</result>
        </action>
        <action name="myFirstAction" class="com.sinaapp.filmview.GettingStarted">
            <result name="success">/WEB-INF/pages/first_action_result.jsp</result>
        </action>
        <action name="Bootstrap">
            <result>/WEB-INF/pages/welcome.jsp</result>
        </action>
        <action name="hello" class="com.sinaapp.filmview.GettingStarted" method="hello">
            <result type="velocity">/WEB-INF/vm/test.vm</result>
        </action>
    </package>

    <!--
    <package name="demo" extends="struts-default">
        <default-action-ref name="hello" />

    </package>
    -->
</struts>