<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="false" />
    <package name="default" extends="struts-default" namespace="/">
        <default-action-ref name="Bootstrap" />
        <action name="home">
            <result>/index.jsp</result>
        </action>
        <action name="gettingStarted">
            <result>/WEB-INF/pages/first_action_input.jsp</result>
        </action>
        <action name="myFirstAction" class="com.sinaapp.filmview.GettingStarted">
            <result name="success">/WEB-INF/pages/first_action_result.jsp</result>
        </action>
        <action name="Bootstrap">
            <result>/WEB-INF/pages/welcome.jsp</result>
        </action>
        <action name="newFilm">
            <result>/WEB-INF/pages/new_film.jsp</result>
        </action>
        <action name="login">
            <result>/WEB-INF/pages/login.jsp</result>
        </action>
    </package>

